{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "launch pbrt",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/debug-cpu/pbrt",
            "args": [
                "--nthreads",
                "1",
                "--display-server",
                "localhost:14158",
                "${workspaceFolder}/scenes/test.pbrt"
            ],
            "environment": [],
            "cwd": "${workspaceFolder}/bin/debug-cpu",
            "stopAtEntry": false,
            "logging": {
                "moduleLoad": false,
                "trace": false
            },
            "linux": {
                "MIMode": "gdb",
                "setupCommands": [
                    {
                        "description": "Enable pretty-printing for gdb",
                        "text": "-enable-pretty-printing",
                        "ignoreFailures": true
                    }
                ],
                "miDebuggerPath": "/usr/bin/gdb"
            },
        },
        {
            "name": "launch pbrt test",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/debug-cpu/pbrt_test",
            "args": [
                "--test-filter",
                "StringPrintf.Basics",
            ],
            "environment": [],
            "cwd": "${workspaceFolder}/bin/debug-cpu",
            "stopAtEntry": false,
            "logging": {
                "moduleLoad": false,
                "trace": false
            },
            "linux": {
                "MIMode": "gdb",
                "setupCommands": [
                    {
                        "description": "Enable pretty-printing for gdb",
                        "text": "-enable-pretty-printing",
                        "ignoreFailures": true
                    }
                ],
                "miDebuggerPath": "/usr/bin/gdb"
            },
        }
    ]
}